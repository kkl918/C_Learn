#include <string>
#include<iostream>
#include<fstream>
using namespace std;

void line();

int main(){		
	cout << "An int type ptr experiment.";
	line();
	
	int a = 10, *ptr;
	cout << "&a:" << &a << endl;
	line();
	cout << "\tAt first:"              << endl;
	cout << "\t ptr:" <<  ptr          << endl; 
	cout << "\t*ptr:" << " -> CRASH!!" << endl;
	cout << "\t&ptr:" << &ptr          << endl;
	line();
	
	ptr = &a;

	cout << "\tAfter do [ ptr = &a ]:" << endl; 
	cout << "\t ptr:" <<  ptr << endl;
	cout << "\t*ptr:" << *ptr << endl; 
	cout << "\t&ptr:" << &ptr << endl;
    
	line();
	cout << "\t&a  :" <<  &a    << " \ta  自己的位置"     << endl;
	cout << "\t&ptr:" <<  &ptr  << " \tptr自己的位置"     << endl; 
	cout << "\t ptr:" <<  ptr   << " \t變數ptr儲存的是位置"     << endl;
	cout << "\t*ptr:" << *ptr   << " \t指標ptr指向的是位置的值" <<endl;	
}

void line(){
	cout << endl << "--------------------------------" << endl;
}
